@LIT_SITE_CFG_IN_HEADER@

import sys

config.host_triple = "@LLVM_HOST_TRIPLE@"
config.target_triple = "@TARGET_TRIPLE@"
config.llvm_src_root = "@LLVM_SOURCE_DIR@"
config.llvm_obj_root = "@LLVM_BINARY_DIR@"
config.llvm_lib_dir = "@LLVM_LIBRARY_DIR@"

config.meminstrument_src_root = "@LLVM_SOURCE_DIR@/projects/meminstrument"
config.meminstrument_test_root = "@LLVM_SOURCE_DIR@/projects/meminstrument/test"

config.substitutions.append(('%clink', config.llvm_obj_root + '/bin/clang -L@MEMINSTRUMENT_RT_LIB_PATH@'))

if '@MEMINSTRUMENT_USE_PICO@' in ['1', 'ON']:
    config.substitutions.append(('%pmdalib', config.llvm_lib_dir + '/LLVMPMDA.so'))
    config.substitutions.append(('%checkoptimizerlib', config.llvm_lib_dir + '/LLVMcheckoptimizer.so'))
    config.available_features.add("pmda")
else:
    config.available_features.add("no_pmda")

config.substitutions.append(('%loadlibs', '-load ' + config.llvm_lib_dir + '/LLVMmeminstrument.so'))

# Let the main config do the real work.
lit_config.load_config(config, "@LLVM_SOURCE_DIR@/projects/meminstrument/test/lit.cfg")
